{
  "$schema": "http://json-schema.org/schema#",
  "description" : "Describes platform.json file in Heta compiler.",
  "type": "object",
  "required": ["id", "importModule"],
  "additionalProperties": true,
  "properties": {
    "id": {"type": "string"},
    "title": {"type": "string"},
    "notes": {"type": "string"},
    "version": {"type": "string"},
    "keywords": {"type": "array", "items": {"type": "string"}},
    "homepage": {"type": "string"},
    "repository": {
      "type": "object",
      "properties": {
        "type": {"type": "string"},
        "url": {"type": "string"}
      }
    },
    "license" : {"type": "string", "default": "UNLICENSED", "description": "see https://spdx.org/licenses/"},
    "private": {"type": "boolean"},
    "contributors": {"type": "array", "items": {"type": "string", "example": "Your Name <email@example.com> (http://example.com)"}},
    "builderVersion": {"type": "string", "default": "^0.0.0"},
    "options": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "debuggingMode": {"type": "boolean", "default": false, "description": "Should we put parsed modules to meta?"},
        "logMode": {"type": "string", "default": "none", "enum": ["error", "always", "none"]},
        "logPath": {"type": "string", "default": "build.log"},
        "logLevel": {"type": "string"},
        "skipExport": {"type": "boolean", "default": false},
        "distDir": {"type": "string", "default": "dist" },
        "metaDir": {"type": "string", "default": "meta" }
      },
      "default": {"debuggingMode": false, "logLevel": "info"}
    },
    "scripts": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "afterInit": {"type": "string"},
        "afterImports": {"type": "string"},
        "afterExports": {"type": "string"}
      }
    },
    "importModule": {
      "type": "object",
      "required": ["type", "source"],
      "additionalProperties": false,
      "properties": {
        "type": {"type": "string", "enum": ["heta", "xlsx", "json", "yaml", "sbml"]},
        "source": {"type": "string"},
        "sheet": { "type": "integer" },
        "omitRows": { "type": "integer" }
      }
    }
  }
}
