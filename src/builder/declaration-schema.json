{
  "type": "object",
  "required": ["id"],
  "additionalProperties": true,
  "properties": {
    "id": {"type": "string"},
    "title": {"type": "string"},
    "notes": {"type": "string"},
    "version": {"type": "string"},
    "copyright": {"type": "string"},
    "builderVersion": {"type": "string", "default": "^0.0.0"},
    "options": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "debuggingMode": {"type": "boolean", "default": false},
        "logs": {"type": "string"},
        "logLevel": {"type": "string", "enum": ["error", "warn", "info", "verbose", "debug", "silly"]},
        "skipExport": {"type": "boolean", "default": false}
      },
      "default": {"debuggingMode": false, "syncMode": false, "logLevel": "info"}
    },
    "scripts": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "afterInit": {"type": "string"},
        "afterImports": {"type": "string"},
        "afterExports": {"type": "string"}
      }
    },
    "importModule": {
      "type": "object",
      "required": ["type", "source"],
      "additionalProperties": false,
      "properties": {
        "type": {"type": "string", "enum": ["heta", "yaml", "slv", "json", "sbml", "xlsx"]},
        "source": {"type": "string"},
        "ignoreDeps": {"type": "boolean", "default": false},
        "options": {"type": "object", "default": {}}
      }
    }
  }
}
